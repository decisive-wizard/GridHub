
bright-blue = #0637FF;
soft-blue   = #056EE8;
light-blue  = #07BBFF;
turquoise   = #05E5E8;
green       = #06FFBC;
light-green = #294C71;
light-grey  = #99AEB6;

@font-face
  font-family Quicksand-Bold
  font-style normal
  src url(../fonts/Quicksand-Bold.otf)

@font-face
  font-family Quicksand
  font-style normal
  src url(../fonts/Quicksand-Regular.otf)

body
	margin 0
	padding 0
	background: -webkit-linear-gradient(right, #121B32 , #1A2E50); /* For Safari 5.1 to 6.0 */

#loading-overlay
  position fixed
  z-index 100
  top 0px
  left 0px
  height 200px
  width 400px
  border 1px solid light-grey
  background #EDF0F7
  border-radius 5px
  display none

.spinner
  background-position center center
  background-repeat no-repeat
  background url('../img/spiffygif_90x90.gif')
  width 90px
  height 90px
  margin 0 auto
  margin-top 40px

.page-content-wrapper
  position relative


.btn-outline
  background-color transparent
  color inherit
  transition: all .5s

.btn-primary
  &.btn-outline
    color #428bca

.btn-success
  &.btn-outline
    color #5cb85c

.btn-info
  &.btn-outline
    color #5bc0de

.btn-warning
  &.btn-outline
    color #f0ad4e

.btn-danger
  &.btn-outline
    color #d9534f

.btn-primary.btn-outline:hover,
.btn-success.btn-outline:hover,
.btn-info.btn-outline:hover,
.btn-warning.btn-outline:hover,
.btn-danger.btn-outline:hover
  color #fff

@import 'navigation.styl'
@import 'sidebar.styl'
@import 'table.styl'


#modal-text
  font-family Arial
  color black
  font-size 18px
